generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id              String        @id @default(cuid())
  title           String
  description     String
  longDescription String
  images          String[]
  githubUrl       String?
  liveUrl         String?
  tags            String[]
  features        String[]
  technologies    String[]
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  domain          ProjectDomain @default(WEB)
  video           String?

  @@map("projects")
}

enum ProjectDomain {
  WEB
  ML
  AI_ML
  DS
}

model Certificate {
  id             String   @id @default(cuid())
  title          String
  organization   String
  issueDate      DateTime?
  expirationDate DateTime?
  credentialUrl  String?
  logoUrl        String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@map("certifications")
}